				<action name="Execute">
					<command>
						x-www-browser https://drive.google.com/
					</command>
				</action>
			</item>
			<item label="AbiWord Word Processor">
				<action name="Execute">
					<command>
						abiword
					</command>
				</action>
			</item>
			<item label="Gnumeric Spreadsheet">
