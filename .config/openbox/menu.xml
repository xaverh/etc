		<menu id="settings" label="Settings">
            <!--
            <menu execute="cb-compositor" id="CompositingPipeMenu" label="Compositor"/>
            -->
			<menu id="conkyconfig" label="Conky">
				<item label="Edit .conkyrc">
					<action name="Execute">
						<command>
							urxvtcd -e vim ~/.conkyrc
						</command>
					</action>
				</item>
				<item label="Restart Conky">
					<action name="Execute">
						<command>
							conkywonky
						</command>
					</action>
				</item>
			</menu>
			<menu id="gmrunconfig" label="gmrun">
				<item label="Edit config file">
					<action name="Execute">
						<command>
							urxvtcd -e vim ~/.gmrunrc
						</command>
					</action>
				</item>
				<separator label="Help?"/>
				<item label="man page">
					<action name="Execute">
						<command>
							urxvtcd -e "man gmrun"
						</command>
					</action>
				</item>
			</menu>
			<menu id="obConfig" label="Openbox">
				<item label="Edit menu.xml">
					<action name="Execute">
						<command>
							urxvtcd -e vim ~/.config/openbox/menu.xml
						</command>
					</action>
				</item>
				<item label="Edit rc.xml">
					<action name="Execute">
						<command>
							urxvtcd -e vim ~/.config/openbox/rc.xml
						</command>
					</action>
				</item>
				<item label="Edit autostart">
					<action name="Execute">
						<command>
							urxvtcd -e vim ~/.config/openbox/autostart
						</command>
					</action>
				</item>
				<separator/>
				<item label="GUI Menu Editor">
					<action name="Execute">
						<command>
							obmenu
						</command>
					</action>
				</item>
				<item label="GUI Applications Settings Editor">
					<action name="Execute">
						<command>
							obapps
						</command>
					</action>
				</item>
				<item label="GUI Config Tool">
					<action name="Execute">
						<command>
							obconf
						</command>
					</action>
				</item>
				<separator/>
				<item label="Reconfigure">
					<action name="Reconfigure"/>
				</item>
				<item label="Restart">
					<action name="Restart"/>
				</item>
			</menu>
			<menu id="terminatorconfig" label="Terminator">
				<item label="Edit config file">
					<action name="Execute">
						<command>
							urxvtcd -e vim ~/.config/terminator/config
						</command>
					</action>
				</item>
				<separator label="Help?"/>
				<item label="man page">
					<action name="Execute">
						<command>
							urxvtcd -e "man terminator_config"
						</command>
					</action>
				</item>
			</menu>
			<menu id="tint2config" label="tint2">
				<item label="Edit config file">
					<action name="Execute">
						<command>
							code ~/.config/tint2/tint2rc
						</command>
					</action>
				</item>
                <item label="Restart tint2">
					<action name="Execute">
						<command>
							killall -SIGUSR1 tint2
						</command>
					</action>
				</item>
			</menu>
			<menu id="DisplaySettings" label="Display Settings">
			    <item label="ARandR Screen Layout Editor">
				    <action name="Execute">
					    <command>
						    arandr
					    </command>
				    </action>
			    </item>
			    <separator label="Help?"/>
			    <item label="man xrandr">
				    <action name="Execute">
					    <command>
						    urxvtcd -e "man xrandr"
					    </command>
				    </action>
			    </item>
			</menu>
			<menu id="Notifications" label="Notifications">
				<item label="settings">
					<action name="Execute">
						<command>xfce4-notifyd-config</command>
					</action>
				</item>
			</menu>
			<item label="User Interface Settings">
				<action name="Execute">
					<command>
						lxappearance
					</command>
				</action>
			</item>
			<!--<item label="Power Management">
				<action name="Execute">
					<command>
						xfce4-power-manager-settings
					</command>
				</action>
			</item>-->
			<item label="Screensaver">
				<action name="Execute">
					<command>
						xscreensaver-demo
					</command>
				</action>
			</item>
			<item label="Next Wallpaper">
				<action name="Execute">
					<command>
						~/.fehbg
					</command>
				</action>
			</item>
		</menu>
		<menu id="system" label="System">
		    <!--<menu execute="cb-printing-pipemenu" id="PrintingPipeMenu" label="Printers"/>-->
		    <item label="GParted">
				<action name="Execute">
					<command>
						gksudo gparted
					</command>
				</action>
			</item>
		</menu>
		<separator/>
		<item label="Lock Screen">
			<action name="Execute">
				<command>
					xscreensaver-command --lock
				</command>
			</action>
		</item>
		<item label="Have you tried turnin' it off and on again?">
			<action name="Execute">
				<command>
					systemctl reboot
				</command>
			</action>
		</item>
